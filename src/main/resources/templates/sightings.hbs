{{#partial "content"}}
    <div class="form-data">
        <h1>Ranger enter your Sighting Findings</h1>
        <!--Post request after user -submission-->
        <form action="/sightings" method="post" class="col-md-8">
            <div class="form-group">
                <label for="formGroupExampleInput">Ranger name</label>
                <input type="text" class="form-control" id="ranger" name="ranger">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Location</label>
                <input type="text" class="form-control" id="location" name="location">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">AnimalID</label>
                <input type="text" class="form-control" id="AnimalID" name="animalId">
            </div>
            <button  class="btn btn-success" type="submit">Submit</button>
        </form>
    </div>

    <style>
    .form-data{
            font-family: 'Acme', sans-serif;
            font-size: 21px;
    }

    </style>
{{/partial}}

